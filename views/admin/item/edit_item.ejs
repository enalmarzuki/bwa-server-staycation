<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%= item.title %>" class=" form-control"
            placeholder="Enter title" required>
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" value="<%= item.price %>" class="form-control"
            placeholder="Enter price" required>
        </div>

        <div class="form-group">
          <label for="city">City</label>
          <input type="text" name="city" id="city" value="<%= item.city %>" class="form-control"
            placeholder="Enter city" required>
        </div>

        <div class="form-group">
          <label for="categoryId">Category</label>
          <select name="categoryId" id="categoryId" class="form-control">
            <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>
            <% for(let i = 0; i < category.length; i++) { %>
            <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <% } %>
          </select>
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" name="image" class="form-control" multiple>
        </div>

        <div class="form-group">
          <label for="about">Description</label>
          <textarea type="text" name="about" id="about" class="form-control"><%= item.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>