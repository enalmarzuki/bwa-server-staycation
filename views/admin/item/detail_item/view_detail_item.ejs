<!-- ckEditor -->
<script>
  $(document).ready(function () {
    $('#dataTableActivity').DataTable();
  })

  CKEDITOR.replace('about');

  // dataTableActivity
  $("#dataTableActivity").on("click", ".btn-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");

    $("#edit-modal-activity").modal("show");

    $(".id").val(id);
    $(".name").val(name);
    $(".type").val(type);
  });

  // dataTableFeature
  $("#dataTable").on("click", ".btn-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");

    $("#edit-modal-feature").modal("show");

    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
  });
</script>